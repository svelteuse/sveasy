{
  "name": "sveasy",
  "version": "0.10.5",
  "homepage": "https://github.com/svelteuse/sveasy#readme",
  "bugs": {
    "url": "https://github.com/svelteuse/sveasy/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/svelteuse/sveasy.git"
  },
  "license": "ISC",
  "author": {
    "name": "Alexander Niebuhr",
    "email": "tech@nbhr.io"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs"
    },
    "./browser": {
      "import": "./dist/browser/browser.mjs"
    }
  },
  "types": "./dist/index.d.ts",
  "bin": "bin/sveasy.mjs",
  "files": [
    "dist/**/*",
    "bin/**/*"
  ],
  "scripts": {
    "prepublishOnly": "npm run build:clean",
    "build:clean": "rimraf dist && npm run build:node && npm run build:browser &&  npm run generate:types",
    "build:node": "esbuild src/index.ts --external:esbuild --format=esm --platform=node --target=esnext --outfile=dist/index.mjs --bundle --minify",
    "build:browser": "esbuild src/browser/browser.ts --format=esm --outfile=dist/browser/browser.mjs --target=chrome93,edge93 --bundle",
    "generate:types": "tsc --emitDeclarationOnly --outFile dist/index.d.ts"
  },
  "dependencies": {
    "esbuild": "0.13.14"
  },
  "devDependencies": {
    "@alexanderniebuhr/style": "1.0.13",
    "@nbhr/utils": "0.0.30",
    "@types/node": "16.11.7",
    "@types/yargs": "17.0.5",
    "get-port": "6.0.0",
    "rimraf": "3.0.2",
    "svelte": "3.44.1",
    "typescript": "4.4.4",
    "windicss": "3.2.1",
    "yargs": "17.2.1"
  },
  "engines": {
    "node": ">= 16"
  },
  "volta": {
    "node": "17.1.0"
  }
}
